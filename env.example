# Stripe API Keys (Sandbox/Test Mode)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key_here

# Database Configuration
DATABASE_URL=your_database_url_here

# Session Secret (generate a random string for production)
SESSION_SECRET=your_session_secret_here

# Environment
NODE_ENV=development

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google Maps API (for distance calculation and delivery zones)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Places API (for address autocomplete) - DISABLED to save costs
# VITE_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ShipDay API (for delivery fulfillment)
SHIPDAY_API_KEY=your_shipday_api_key_here

# Printer Configuration
PRINTER_IP=192.168.1.100

# Kitchen Monitor Mode (set to 'true' to require manual order acceptance)
MONITOR_MODE=false

