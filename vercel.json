{
  "version": 2,
  "buildCommand": "npx vite build --mode production --minify esbuild",
  "installCommand": "npm ci --prefer-offline --no-audit --no-fund",
  "devCommand": "echo 'API-only mode - client runs separately'",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/@vite/(.*)",
      "destination": "/@vite/$1"
    },
    {
      "source": "/@react-refresh",
      "destination": "/@react-refresh"
    },
    {
      "source": "/src/(.*)",
      "destination": "/src/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "github": {
    "silent": true,
    "deploymentEnabled": true
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096 --experimental-worker",
      "VITE_BUILD_CACHE": "true",
      "CI": "1",
      "NODE_ENV": "production"
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=300"
        }
      ]
    }
  ]
}