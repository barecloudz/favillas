# Force browsers to always check for new index.html
# This ensures users get the latest version with new hashed file references
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# All other HTML files should also not be cached
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Static assets with hashed filenames can be cached forever
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Hashed JS and CSS files
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable
